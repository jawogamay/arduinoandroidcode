<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserActivity.ActivityProfile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/background">
            <ImageView
                android:id="@+id/imgUserImage"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/profile"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/lblFullname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_below="@+id/imgUserImage"
                android:layout_centerHorizontal="true"
                android:layout_margin="3dp"
                android:textSize="20dp"
                android:textColor="@color/Black"
                android:text="Fullname"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/White">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="PERSONAL INFORMATION"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:layout_margin="5dp"
                        android:background="@color/colorPrimary"
                        android:textColor="@color/White"/>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:background="@drawable/shape_txtbox_bg"
                        android:layout_margin="5dp"
                        android:layout_height="50dp">
                        <EditText
                            android:id="@+id/txPLname"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/transparent"
                            android:hint="Lastname"
                            android:layout_margin="10dp"/>
                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:background="@drawable/shape_txtbox_bg"
                        android:layout_margin="5dp"
                        android:layout_height="50dp">
                        <EditText
                            android:id="@+id/txPFname"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/transparent"
                            android:layout_margin="10dp"
                            android:hint="Firstname"/>
                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:background="@drawable/shape_txtbox_bg"
                        android:layout_margin="5dp"
                        android:layout_height="50dp">
                        <EditText
                            android:id="@+id/txPaddress"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/transparent"
                            android:layout_margin="10dp"
                            android:hint="Address"/>
                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:background="@drawable/shape_txtbox_bg"
                        android:layout_margin="5dp"
                        android:layout_height="50dp">
                        <EditText
                            android:id="@+id/txPemail"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/transparent"
                            android:layout_margin="10dp"
                            android:hint="Email"/>
                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:background="@drawable/shape_txtbox_bg"
                        android:layout_margin="5dp"
                        android:layout_height="50dp">
                        <EditText
                            android:id="@+id/txPpnumber"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/transparent"
                            android:layout_margin="10dp"
                            android:inputType="number"
                            android:hint="Phone Number"/>
                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:background="@drawable/shape_txtbox_bg"
                        android:layout_margin="5dp"
                        android:layout_height="50dp">
                        <EditText
                            android:id="@+id/txPdeviceId"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/transparent"
                            android:layout_margin="10dp"
                            android:inputType="number"
                            android:hint="Device Connected"/>
                    </android.support.design.widget.TextInputLayout>

                    <Button
                        android:id="@+id/btnUpdate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="UPDATE"
                        android:textColor="@color/White"
                        android:textSize="20dp"
                        android:visibility="gone"
                        android:layout_margin="5dp"
                        android:background="@color/DodgerBlue"
                        />
                </LinearLayout>
            </ScrollView>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>