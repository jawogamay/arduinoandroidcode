<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    tools:context=".GenActivity.ActivityRegistration">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="110dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/logo"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gas Leak and Fire Detection System"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:textColor="@color/White"
                    android:layout_below="@+id/logo"/>
            </RelativeLayout>
        </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="horizontal">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="vertical"
                   android:weightSum="1">
                   <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent">
                       <android.support.design.widget.TextInputLayout
                           android:id="@+id/dvIdlayout"
                           android:layout_width="290dp"
                           android:textColorHint="@color/Black"
                           android:background="@drawable/shape_txtbox_bg"
                           android:layout_marginTop="5dp"
                           android:layout_marginStart="10dp"
                           android:layout_height="50dp">
                           <EditText
                               android:id="@+id/txtDevId"
                               android:layout_width="match_parent"
                               android:layout_height="match_parent"
                               android:layout_marginTop="15dp"
                               android:background="@color/transparent"
                               android:paddingLeft="10dp"
                               android:inputType="textPersonName"
                               android:hint="Device Code"/>

                       </android.support.design.widget.TextInputLayout>

                       <Button
                           android:id="@+id/btnpick"
                           android:layout_width="match_parent"
                           android:background="@drawable/ic_arrow_drop_down_circle"
                           android:layout_margin="2dp"
                           android:backgroundTint="@color/WhiteSmoke"
                           android:layout_centerHorizontal="true"
                           android:layout_height="match_parent"
                           android:layout_toRightOf="@+id/dvIdlayout"
                           android:layout_marginEnd="5dp"
                           android:layout_gravity="right"/>
                   </RelativeLayout>
               </LinearLayout>


           </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:textColorHint="@color/Black"
                    android:background="@drawable/shape_txtbox_bg"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_height="50dp">
                    <EditText
                        android:id="@+id/txtfname"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15dp"
                        android:background="@color/transparent"
                        android:paddingLeft="10dp"
                        android:hint="Firstname"
                        android:inputType="textPersonName"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:textColorHint="@color/Black"
                    android:background="@drawable/shape_txtbox_bg"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_height="50dp">
                    <EditText
                        android:id="@+id/txtlname"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15dp"
                        android:background="@color/transparent"
                        android:paddingLeft="10dp"
                        android:hint="Lastname"
                        android:inputType="textPersonName"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:textColorHint="@color/Black"
                    android:background="@drawable/shape_txtbox_bg"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_height="50dp">
                    <EditText
                        android:id="@+id/txtphoneNum"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15dp"
                        android:background="@color/transparent"
                        android:paddingLeft="10dp"
                        android:hint="Phone number"
                        android:inputType="phone"
                        android:maxLength="10"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:textColorHint="@color/Black"
                    android:background="@drawable/shape_txtbox_bg"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_height="50dp">
                    <EditText
                        android:id="@+id/txtEmail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15dp"
                        android:background="@color/transparent"
                        android:paddingLeft="10dp"
                        android:hint="Email"
                        android:inputType="textPersonName"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:textColorHint="@color/Black"
                    android:background="@drawable/shape_txtbox_bg"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_height="90dp">
                    <EditText
                        android:id="@+id/txtAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:scrollbars="vertical"
                        android:inputType="textMultiLine"
                        android:background="@color/transparent"
                        android:paddingLeft="10dp"
                        android:maxLines="100"
                        android:hint="Address"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:textColorHint="@color/Black"
                    android:background="@drawable/shape_txtbox_bg"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_height="50dp">
                    <EditText
                        android:id="@+id/txtPword"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15dp"
                        android:background="@color/transparent"
                        android:paddingLeft="10dp"
                        android:hint="Password"
                        android:inputType="textPassword"/>
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:textColorHint="@color/Black"
                android:background="@drawable/shape_txtbox_bg"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_height="50dp">
                <EditText
                    android:id="@+id/txtRe_p_word"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:background="@color/transparent"
                    android:paddingLeft="10dp"
                    android:hint="Re-enter password"
                    android:inputType="textPassword"/>
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btnRegister"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:text="REGISTER"
                    android:textColor="@color/White"
                    android:textSize="20dp"
                    android:background="@color/DodgerBlue"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/lblaaa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/White"
                        android:text="Already have an account? "/>
                    <TextView
                        android:id="@+id/lblSignIn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/DodgerBlue"
                        android:layout_toRightOf="@+id/lblaaa"
                        android:text="SIGN IN NOW "/>
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>