<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    tools:context=".GenActivity.ActivityForgetPassword">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/logo"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/lbltitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gas Leak and Fire Detection System"
        android:gravity="center"
        android:textSize="15dp"
        android:textColor="@color/White"
        android:layout_below="@+id/logo"/>
    <LinearLayout
        android:layout_below="@+id/lbltitle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Enter Email Address"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_marginStart="15dp"
            android:textColor="@color/White"
            android:layout_below="@+id/logo"/>
        <EditText
            android:id="@+id/txtResetEmail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/shape_txtbox_bg"
            android:inputType="textEmailAddress"
            android:gravity="center"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"/>
        <Button
            android:id="@+id/btnSendPassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/DodgerBlue"
            android:text="SEND MY PASSWORD "
            android:textColor="@color/White"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="5dp"
            android:textSize="20dp"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Team Cool-Sina"
        android:textSize="15dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp"
        android:textColor="@color/White"/>
</RelativeLayout>